                <t t-foreach="docs" t-as="o">
                    <t t-call="web.external_layout">
                        <div class="page">
                            <h2>Informaci√≥n Usuario</h2>
                            <p>Nombre:
                                <span t-field="o.name"/>
                            </p>
                            <p>Fecha:
                                <span t-field="o.date" t-options='{"format":"dd/MM/yyyy"}'/>
                            </p>
                        </div>
                    </t>
                </t>

            </t>
        </template>
    </data>
</odoo>